    	<!-- Daterange picker -->
    	<link href="~/gymove/vendor/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    	<!-- Clockpicker -->
    	<link href="~/gymove/vendor/clockpicker/css/bootstrap-clockpicker.min.css" rel="stylesheet">
    	<!-- asColorpicker -->
    	<link href="~/gymove/vendor/jquery-asColorPicker/css/asColorPicker.min.css" rel="stylesheet">
