{
    <!-- Start Page Level CSS -->
    <link rel="stylesheet" href="~/gymove/vendor/select2/css/select2.min.css">
    	<!-- Daterange picker -->
    	<link href="~/gymove/vendor/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    	<!-- Clockpicker -->
    	<link href="~/gymove/vendor/clockpicker/css/bootstrap-clockpicker.min.css" rel="stylesheet">
    	<!-- asColorpicker -->
    	<link href="~/gymove/vendor/jquery-asColorPicker/css/asColorPicker.min.css" rel="stylesheet">
    	<!-- Material color picker -->
    	<link href="~/gymove/vendor/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet">
    	<!-- Pick date -->
    	<link rel="stylesheet" href="~/gymove/vendor/pickadate/themes/default.css">
    	<link rel="stylesheet" href="~/gymove/vendor/pickadate/themes/default.date.css">
    	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- End Page Level CSS -->
}

