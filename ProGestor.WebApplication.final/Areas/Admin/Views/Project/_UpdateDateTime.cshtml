@model ProGestor.WebApplication.final.viewModels.ProjectViewModel

@{
    ViewData["Title"] = "Proyectos";
    ViewData["Caption"] = "Estados del proyecto";
}


<div class="bootstrap-modal">
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal-header">
        <h5 class="modal-title">Modificar fecha</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal">
        </button>
    </div>
    <form asp-action="UpdateDateTime" asp-area="Admin" asp-controller="Project" method="post">
	    <div class="modal-body">
            <div class="card">
                <div class="card-body">
                    <label> Fecha de inicio</label>
                    <input type="datetime-local" name="DateProjectStart" value="@Model.DateProjectStart" class="datepicker-default form-control" id="datepicker">
                    <br/>
                    <label>Fecha de cierre</label>
                    <input type="datetime-local" name="DateProjectEnd" value="@Model.DateProjectEnd" class="datepicker-default form-control" id="datepicker">
                </div>
            </div>
	    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Cerrar</button>

            <button type="submit" class="btn btn-primary">Guardar cambios</button>
        </div>
    </form>
</div>

