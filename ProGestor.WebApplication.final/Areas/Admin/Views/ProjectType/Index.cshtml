@model ProGestor.WebApplication.final.viewModels.ProjectTypeViewModel
@{
    ViewData["Title"] = "Proyectos";
    ViewData["Caption"] = "Tipos de proyectos";
}


<div class="content-body default-height">
	<div class="container-fluid">
		<div class="page-titles">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="javascript:void(0)">Proyectos</a></li>
				<li class="breadcrumb-item active"><a href="javascript:void(0)">Tipos de proyecto</a></li>
			</ol>
		</div>
		<!-- Row -->
		<div class="row">
			<div class="col-xl-12">
				<div class="row">
					<div class="col-xl-4">
						<div class="filter cm-content-box box-primary">
							<div class="content-title">
								<div class="cpa">
									Agregar nuevo tipo
								</div>
								<div class="tools">
									<a href="javascript:void(0);" class="expand SlideToolHeader"><i class="fal fa-angle-down"></i></a>
								</div>
							</div>
							<div class="cm-content-body form excerpt">
								<div class="card-body">
									<form asp-controller="ProjectType" asp-area="Admin" asp-action="Add">
										<div class="mb-3">
											<label class="form-label">Tipo de proyecto</label>
											<input type="text" name="name" value="@(Model?.Name ?? "")" class="form-control" placeholder="Ejemp: Construcción de casa">
										</div>
										<div class="mb-3">
											<label class="form-label">Descripción</label>
											<input type="text" name="description" value="@(Model?.Description ?? "")" class="form-control" placeholder="Breve descripción del tipo de proyecto.">
										</div>
										<button type="submit" class="btn btn-primary">Guardar</button>
									</form>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xl-8">
						<div class="filter cm-content-box box-primary">
							<div class="content-title">
								<div class="cpa">
									Lista de tipos
								</div>
								<div class="tools">
									<a href="javascript:void(0);" class="expand SlideToolHeader"><i class="fal fa-angle-down"></i></a>
								</div>
							</div>
							<div class="cm-content-body publish-content form excerpt">
								<div class="card-body py-3">
									<div class="table-responsive">
										<table class="table table-striped verticle-middle table-responsive-sm">
											<thead>
											<tr>
												<th scope="col" class="text-black">S.No</th>
												<th scope="col" class="text-black">Nombre</th>
												<th scope="col" class="text-black">Descripción</th>
												<th scope="col" class="text-black text-end">Acción</th>
											</tr>
											</thead>
											<tbody>
												
											@foreach (var item in Model.ProjectTypes)
											{
												<tr>
													
													<td>@item.Id</td>
													<td>@item.name</td>
													<td>@item.description</td>

													<td class="text-end">
														@* <a href="javascript:void(0);">Editar</a> *@
														<button type="button" class="btn btn-primary mb-2 btn_update_project_type" data-url="@Url.Action("UpdateType", "ProjectType", new { area = "Admin" })"  data-id="@item.Id" >Editar</button>
														<span>|</span>
														<button type="button" class="btn btn-primary mb-2 remove_project_type" data-url="@Url.Action("Remove", "ProjectType", new { area = "Admin" })" data-id="@item.Id" >Eliminar</button>
													</td>
												</tr>
											}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



<div class="modal fade" id="project_type_modal_update">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Contenido del modal (se cargará la vista parcial aquí) -->
        </div>
    </div>
</div>



<!--**********************************
Content body end
***********************************-->
