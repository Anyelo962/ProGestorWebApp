@page
@using ProGestor.Common.Const
@model RegisterModel
@{
    ViewData["Title"] = "";
    // Layout = "~/Views/Shared/_LayoutProGestorBlank.cshtml";
     Layout = "~/Views/Shared/_LayoutProGestorBlank.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="">
    <div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="authincation h-100">
                <div class="container h-100">
                    <div class="row justify-content-center h-100 align-items-center">
                        <div class="col-md-6">
                            <div class="authincation-content">
                                <div class="row no-gutters">
                                    <div class="col-xl-12">
                                        <div class="auth-form">
                                            <div class="text-center mb-3">
                                                <a><img src="~/gymove/images/engineers.png" alt=""></a>
                                            </div>
                                            <h4 class="text-center mb-4 ">Crear mi cuenta</h4>
                                            <div class="form-group">
                                                <label asp-for="Input.firstName" class="mb-1 form-label">Nombre de usuario</label> 
                                                <input asp-for="Input.firstName" class="form-control" placeholder="Nombre de usuario"/>
                                                <span asp-validation-for="Input.firstName" class="text-danger"></span>
                                            </div>
                                             
                                            <div class="form-group">
                                                <label asp-for="Input.LastName" class="mb-1 form-label">Apellido</label> 
                                                <input asp-for="Input.LastName" class="form-control" placeholder="Gonzales matos"/>
                                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                         
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Input.Email" class="mb-1 form-label">Correo electronico</label>
                                                <input asp-for="Input.Email" type="email" class="form-control" placeholder="hello@example.com">
                                                <span asp-validation-for="Input.Email"></span>
                                            </div>
                                             
                                            <div class="form-group">
                                                <label asp-for="Input.NumberPhone" class="mb-1 form-label">Numero de contacto</label>
                                                <input asp-for="Input.NumberPhone" type="tel" class="form-control" placeholder="numero telefónico">
                                                <span asp-validation-for="Input.NumberPhone"></span>
                                            </div>
                                             @* Verificar porque cuando llamo desde el metodo de iniciar sesion me da error *@
                                            <div class="form-group">
                                                <label>Seleccione su genero</label>
                                                <select class="form-control default-select" id="sel1" asp-for="GenderSelected">
                                                    <option value=""> Seleccione su sexo</option>
                                                    @foreach (var item in Model.Genders)
                                                    {
                                                        <option value="@item.Id">@item.name</option>
                                                    }
                                                </select>
                                            </div>
                                            
                                            <div class="form-group">
                                                <label>Ciudad</label>
                                                <select class="form-control default-select" id="sel1" asp-for="CitySelected">
                                                    <option value="">Seleccione su ciudad</option>
                                                    @foreach (var item in Model.Cities)
                                                    {
                                                        <option value="@item.Id">@item.name</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="mb-4 position-relative">
                                                <label class="mb-1 form-label">Contraseña</label>
                                                <input asp-for="Input.Password" type="password" id="dz-password" class="form-control" placeholder="123456">
                                                <span class="show-pass eye">
                                                    <i class="fa fa-eye-slash"></i>
                                                    <i class="fa fa-eye"></i>
                                                </span>
                                                <span asp-validation-for="Input.Password"></span>
                                            </div>
                                             
                                            <div class="mb-4 position-relative">
                                                <label class="mb-1 form-label">Confirme su contraseña</label>
                                                <input asp-for="Input.ConfirmPassword" type="password" id="dz-password" class="form-control" placeholder="123456">
                                                <span class="show-pass eye">
                                                    <i class="fa fa-eye-slash"></i>
                                                    <i class="fa fa-eye"></i>
                                                </span>
                                                <span asp-validation-for="Input.ConfirmPassword"></span>
                                            </div>
                                             
                                            @if (User.IsInRole(Rols.Admin))
                                            {
                                                <div class="form-group">
                                                    <label>Seleccione el rol</label>
                                                    <select asp-for="Input.SelectedRole" class="form-control default-select" id="sel1">
                                                        <option name="rol_name" value="@Rols.Admin">Administrador</option>
                                                        <option name="rol_name" value="@Rols.Employee">Empleado</option>
                                                        <option name="rol_name" value="@Rols.Client">Cliente</option>
                                                    </select>
                                                </div>
                                            }
                                            
                                            <div class="text-center mt-4">
                                                <button type="submit" class="btn btn-primary light  btn-block mb-3">Registrarme</button>
                                            </div>
                                            
                                            <div class="text-center">
                                                <button asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary light btn-block">Iniciar sesión</button>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </form>
        @* <div class="new-account mt-3"> *@
        @*     <p>¿Tienes una cuenta? <a class="text-primary" href="@Url.Action("", "")">Iniciar sesión</a></p> *@
        @* </div> *@
    </div>
</div>


